<%= simple_form_for(@completion) do |f| %>
  <%= f.error_notification %>
  <div class="control-group">
    <%= f.label :exercise_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :exercise_id, Exercise.all, :id, :title, :include_blank => true %>
    </div>
  </div>
  <div class="form-inputs">
    <%= f.input :user_id %>
  </div>
  <div class="control-group">
    <%= f.label :last_completed, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :last_completed, [['Exercise','Exercise'],['Lesson','Lesson'],['Test','Test']]%>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
