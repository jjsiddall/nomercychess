<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:move_number) %></th>
      <th colspan="3">White</th>
      <th colspan="3">Black</th>
      <th><%= model_class.human_attribute_name(:explanation) %></th>
      <th><%= model_class.human_attribute_name(:computer) %></th>
      <th><%= model_class.human_attribute_name(:exercise_id) %></th>
      <th><% model_class.human_attribute_name(:updated_at) %>Updated</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% show_moves.each do |move| %>
      <%= render('moves/move', :move => move) %>
    <% end %>

    <tr id="new_move_tr"><%= render('moves/formjs') %></tr>

  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_move_path,
            :class => 'btn btn-primary' %>
