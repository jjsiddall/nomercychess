<%- model_class = Move -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:move_number) %>:</strong></dt>
  <dd><%= @move.move_number %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:piece_white) %>:</strong></dt>
  <dd><%= @move.piece_white %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starting_coordinate_white) %>:</strong></dt>
  <dd><%= @move.starting_coordinate_white %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ending_coordinate_white) %>:</strong></dt>
  <dd><%= @move.ending_coordinate_white %></dd>
  <dt><strong><%= model_class.human_attribute_name(:piece_black) %>:</strong></dt>
  <dd><%= @move.piece_black %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starting_coordinate_black) %>:</strong></dt>
  <dd><%= @move.starting_coordinate_black %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ending_coordinate_black) %>:</strong></dt>
  <dd><%= @move.ending_coordinate_black %></dd>
  <dt><strong><%= model_class.human_attribute_name(:explanation) %>:</strong></dt>
  <dd><%= @move.explanation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exercise_id) %>:</strong></dt>
  <dd><%= @move.exercise.nil? ? "" : @move.exercise.title %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              moves_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_move_path(@move), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              move_path(@move),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
