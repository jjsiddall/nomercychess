<%- model_class = Lesson -%>
<div class="page-header">
  <h1><%=t '.title', :default => @lesson.title %></h1>
</div>

<%= link_to "Let's Go!", exercise_path(@lesson.sorted_exercises.first), :class => 'btn btn-primary' %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @lesson.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @lesson.description %></dd>
</dl>

<div class="row">
  <div class="span12">
      <% @lesson.sorted_exercises.each do |exercise| %> 
          <div class="row">
            <div class="span8 form-inline">
                <%= link_to exercise.title, exercise_path(exercise) %>
            </div>
          </div>
      <% end %>
    </div>
  </div>

<div class="form-actions">
  <%= link_to "Let's Go!", exercise_path(@lesson.exercises.sort_by{|exercise| exercise.sortForLesson}[0]), :class => 'btn btn-primary' %>
  <%= link_to 'Back', lessons_path, :class => 'btn'  %>
</div>


