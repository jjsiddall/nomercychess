<%- model_class = Lesson -%>
<div class="page-header">
  <h1><%=t '.title', :default => @lesson.title %></h1>
</div>

<%= link_to "Let's Go!", exercise_path(@lesson.sorted_exercises.first), :class => 'btn btn-primary' %>

<dl class="dl-horizontal">
<!--   <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @lesson.title %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @lesson.description %></dd>
</dl>
<div class="row">
  <div class="span12">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Exercise Name</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @lesson.sorted_exercises.each do |exercise| %> 
        <tr>
          <td><%= link_to exercise.title, exercise_path(exercise) %></td>
          <td> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

