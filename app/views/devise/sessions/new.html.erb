<div class="row">
	<div class="col-md-4 col-md-offset-4 well">
	  <h2>Please Sign In</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal ' }) do |f| %>
		  <%= f.input :email, :autofocus => true, placeholder: "Email address", input_html: { class: 'col-md-3' } %>
		  <%= f.input :password, placeholder: "Password", input_html: { class: 'col-md-3' } %>
		  <%= f.input :remember_me, inline_label: 'Remember me', label: false, :as => :boolean if devise_mapping.rememberable? %>
		  <div class="controls">
			  <%= f.button :submit, "Sign in", :class => 'btn-primary btn-lg' %>
		  </div>
	      <%= render "devise/shared/links" %>
		<% end %>
	</div>
</div>